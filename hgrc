verbose = True
editor = vim

[extensions]
color =
progress =
mq =
churn =
pager =
rebase =

[defaults]
diff = -p -U 8
qdiff = -p -U 8
qnew = -U
commit = -v
revert = --no-backup
import = --no-commit
status = -q
import = --no-commit

[diff]
git = True
showfunc = True
unified = 8

[pager]
pager = LESS='FSRX' less
attend = cat, diff, log, show

[alias]
lg = !$HG log --limit $1
locale_commits = !$HG outgoing -l 1
reset_upstream = !$HG strip 'roots(outgoing())'
