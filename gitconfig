[user]
	name = Berker Peksag
	email = berker.peksag@gmail.com
[color]
	ui = auto
[core]
	filemode = false
	editor = vim
	excludesfile = ~/dotfiles/global_gitignore
	autocrlf = input
[status]
	showUntrackedFiles = no
[alias]
	di = diff
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	st = status -unormal
	gsu = submodule update --init --recursive
	pr = !sh -c \"git fetch upstream pull/${1}/head:pr/${1} && git checkout pr/${1}\" -
	pushf = push --force-with-lease
[branch "master"]
	rebase = true
[help]
	autocorrect = 1
[push]
	default = tracking
[github]
	user = berkerpeksag
[rebase]
	autosquash = true
[branch]
	autosetuprebase = always
[fetch]
	prune = true
